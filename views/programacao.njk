{% extends "layout.njk" %}


{%block head%}
<title>PROGRAMAÇÃO SW</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}


{% block conteudo %}


<div id="wrapper" class="links">
    <h1>PROGRAMAÇÃO STAR WARS</h1>
</div>

<section class="cards">
    {% for item in items %}
    <div class="card altera" id="{{item.id}}">
        <div class="card_imagens_container {{ 'destaque-wrapper' if item.destaque }}">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.tittle}}">
            {% if item.destaque %}
                <div class="destaque">Destaque</div>
            {% endif %}
        </div>

        <div class="card_conteudo">
            <p>"{{item.tittle}}"</p>
        </div>

        <div class="card_informacao">
            <p>{{item.duration}}</p>
            <p class="card_preco">{{item.price}}</p>
        </div>
    </div>
    {% endfor %}
</section>


