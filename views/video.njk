{% extends "layout.njk" %}


{%block head%}
    <title>{{item.tittle}}</title>
{% endblock %}


{% block conteudo %}


<div id="wrapper" >
    <h1>{{item.tittle}}</h1>
</div>

<section class="video">
    <div class="card" id="{{item.id}}">
        <div class="card_video_container card">
            <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
        </div>

        <div class="card_conteudo">
            <p>"{{item.tittle}}"</p>
        </div>

        <div class="card_informacao">
            <p>{{item.duration}}</p>
            <p class="card_preco">{{item.price}}</p>
        </div>
    </div>
</section>

{% endblock %}